model Client {
  id             String       @id @default(uuid())
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  
  name           String
  email          String?
  vatNumber      String?
  address        String?
  
  invoices       Invoice[]

  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt

  @@map("clients")
}

